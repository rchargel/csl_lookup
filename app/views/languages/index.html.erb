<h1>Listing languages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Language family</th>
      <th>ISO 2 Code</th>
      <th>ISO 3 Code</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @languages.each do |language| %>
      <tr>
        <td><%= language.name %></td>
        <td><%= language.language_family.name %></td>
        <td><%= language.iso2_code %></td>
        <td><%= language.iso3_code %></td>
        <td><%= link_to 'Show', language %></td>
        <td><%= link_to 'Edit', edit_language_path(language) %></td>
        <td><%= link_to 'Destroy', language, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

